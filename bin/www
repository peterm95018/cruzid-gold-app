#!/usr/bin/env node
var app = require('../app');

/* SSL Setup */
var fs = require('fs');
var https = require('https');

// fs.readFileSync('/etc/ssl/certs/nodejs-crm_ucsc_edu_cert.cer');
// fs.readFileSync('/etc/ssl/private/nodejs-crm.ucsc.edu.key');

var port = 3443;
/**
 * Create SSL credentials
 */

 var options = {
  key: fs.readFileSync('/Users/peterm/Desktop/peterm.ucsc.edu-SSL/peterm.server.key'),
  cert: fs.readFileSync('/Users/peterm/Desktop/peterm.ucsc.edu-SSL/peterm_ucsc_edu_cert.cer')
};

app.set('port', process.env.PORT || 3000);

// var server = app.listen(app.get('port'), function() {
//   console.log('Express server listening on port ' + server.address().port);
// });

var server = https.createServer(options, app).listen(port, function(){
  console.log("Express server listening on port " + port);
});